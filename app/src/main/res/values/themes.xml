<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DiceRollerConstraintLayout" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.DiceRollerConstraintLayout" parent="Base.Theme.DiceRollerConstraintLayout" />

    <!-- Estilos para la lista de tiradas -->
    <!-- Estilos general -->

    <!-- La cabecera, con texto mÃ¡s grande -->
    <style name="ListHeader">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="ListHeader.Left">
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_marginStart">4dp</item>
    </style>
    <style name="ListHeader.Right">
        <item name="android:textAlignment">textEnd</item>
        <item name="android:layout_marginEnd">4dp</item>
    </style>
    <!-- Los elementos del listado. Recplicamos las alineaciones de la cabecera -->
    <style name="ListItemLeft">
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_marginStart">4dp</item>
    </style>
    <style name="ListItemRight">
        <item name="android:textAlignment">textEnd</item>
        <item name="android:layout_marginEnd">4dp</item>
    </style>

    <!-- Divider style -->
    <style name="Divider">
        <item name="android:background">?attr/dividerHorizontal</item>
    </style>
</resources>