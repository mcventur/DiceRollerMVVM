<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/id_item"
        style="@style/ListItemRight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/time_item"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="134" />

    <TextView
        android:id="@+id/time_item"
        style="@style/ListItemLeft"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/fecha_y_hora"
        app:layout_constraintEnd_toStartOf="@+id/side1_item"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintStart_toEndOf="@+id/id_item"
        app:layout_constraintTop_toTopOf="@+id/id_item" />

    <TextView
        android:id="@+id/side1_item"
        style="@style/ListItemRight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/cara_dado_1"
        app:layout_constraintEnd_toStartOf="@+id/side2_item"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toEndOf="@+id/time_item"
        app:layout_constraintTop_toTopOf="@+id/time_item" />

    <TextView
        android:id="@+id/side2_item"
        style="@style/ListItemRight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/cara_dado_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toEndOf="@+id/side1_item"
        app:layout_constraintTop_toTopOf="@+id/side1_item" />
</androidx.constraintlayout.widget.ConstraintLayout>