<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/layout_general_padding">
    <!-- Cabeceras de la lista -->

    <!--
    <androidx.recyclerview.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/list"
        android:name="com.mpd.pmdm.dicerollerconstraintlayout.ui.ItemRollHistoryFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layoutManager="LinearLayoutManager"
        tools:context=".ui.ItemRollHistoryFragment"
        tools:listitem="@layout/fragment_item_roll_history" />
        -->
    <TextView
        android:id="@+id/id_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/id"
        app:layout_constraintEnd_toStartOf="@+id/time_header"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/HeaderList.Right"/>

    <TextView
        android:id="@+id/time_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/fecha_y_hora"
        app:layout_constraintEnd_toStartOf="@+id/side1_header"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintStart_toEndOf="@+id/id_header"
        app:layout_constraintTop_toTopOf="@+id/id_header"
        style="@style/HeaderList.Left"/>

    <TextView
        android:id="@+id/side1_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/cara_dado_1"
        app:layout_constraintEnd_toStartOf="@+id/side2_header"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toEndOf="@+id/time_header"
        app:layout_constraintTop_toTopOf="@+id/time_header"
        style="@style/HeaderList.Right"/>

    <TextView
        android:id="@+id/side2_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/cara_dado_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toEndOf="@+id/side1_header"
        app:layout_constraintTop_toTopOf="@+id/side1_header"
        style="@style/HeaderList.Right"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerRollsHistoryList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/id_header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>